<Page
    x:Class="Paris_Saveur.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Paris_Saveur"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="#FFE05C52">
            <Image Source="Assets/logo_white.png"></Image>
            <TextBlock Text="巴黎寻味" Foreground="White" VerticalAlignment="Center" FontSize="22" FontWeight="Bold"></TextBlock>
        </StackPanel>
        <Pivot x:Name="MainPagePivot" 
               Grid.Row="1"
               SelectionChanged="Mainpage_Pivot_SelectionChanged">
            <PivotItem Margin="0" Background="White">
                <PivotItem.Header>
                    <TextBlock x:Name="PivotItem0_Title" Text="首页" FontSize="20" Foreground="Black" Padding="50,0,0,0"></TextBlock>
                </PivotItem.Header>
    			<Grid HorizontalAlignment="Left" Width="396" Margin="0,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.5*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                    </Grid.RowDefinitions>
    				<Image Grid.Row="0" Source="Assets/homepage.png" Stretch="Fill" Margin="0,0,0,0"/>
                    <Grid Grid.Row="1" Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid x:Name="recommendedGrid" Grid.Row="0" Grid.Column="0" Tapped="recommendedText_Tapped">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.3*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Image x:Name="recommendedImage" 
                                   Grid.Row="0" 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,5,0,0"
                                   Source="Assets/mainpage_recommend.png"></Image>
                            <TextBlock x:Name="recommendedText" 
                                       Grid.Row="1"
                                       Text="随便看看" 
                                       Foreground="Black" 
                                       FontSize="21.333" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"></TextBlock>
                        </Grid>
                        <Grid x:Name="nearbyGrid" Grid.Row="0" Grid.Column="1" Tapped="nearbyText_Tapped">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.3*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Image x:Name="nearbyImage" 
                                   Grid.Row="0" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"
                                   Source="Assets/mainpage_location.png"></Image>
                            <TextBlock x:Name="nearbyText" 
                                       Grid.Row="1"
                                       Text="附近餐馆"  
                                       Foreground="Black" 
                                       FontSize="21.333" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"></TextBlock>
                        </Grid>
                        <Grid x:Name="hotGrid" Grid.Row="1" Grid.Column="0" Tapped="hotText_Tapped">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.3*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Image x:Name="hotImage" 
                                   Grid.Row="0" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"
                                   Source="Assets/mainpage_hot.png"></Image>
                            <TextBlock x:Name="hotText"
                                       Grid.Row="1"
                                       Text="热门餐馆"  
                                       Foreground="Black" 
                                       FontSize="21.333" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center">
                            </TextBlock>
                        </Grid>
                        <Grid x:Name="sortbyGrid" Grid.Row="1" Grid.Column="1" Tapped="sortbyText_Tapped">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.3*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Image x:Name="sortbyImage" 
                                   Grid.Row="0" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"
                                   Source="Assets/mainpage_style.png"></Image>
                            <TextBlock x:Name="sortbyText" 
                                       Grid.Row="1"
                                       Text="菜系分类"  
                                       Foreground="Black" 
                                       FontSize="21.333" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"></TextBlock>
                        </Grid>
                        <Grid x:Name="hottagGrid" Grid.Row="2" Grid.Column="0" Tapped="hottagText_Tapped">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.3*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Image x:Name="hottagImage" 
                                   Grid.Row="0" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"
                                   Source="Assets/mainpage_tag.png"></Image>
                            <TextBlock x:Name="hottagText" 
                                       Grid.Row="1"
                                       Text="热门标签"  
                                       Foreground="Black" 
                                       FontSize="21.333" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"></TextBlock>
                        </Grid>
                        <Grid x:Name="metroGrid" Grid.Row="2" Grid.Column="2" Tapped="metroText_Tapped">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.3*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Image x:Name="metroImage" 
                                   Grid.Row="0" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"
                                   Source="Assets/mainpage_metro.png"></Image>
                            <TextBlock x:Name="metroText" 
                                       Grid.Row="1"
                                       Text="地铁周边"  
                                       Foreground="Black" 
                                       FontSize="21.333" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"></TextBlock>
                        </Grid>
                    </Grid>
                </Grid>
    		</PivotItem>
    		<PivotItem Margin="0" Background="White">
                <PivotItem.Header>
                    <TextBlock x:Name="PivotItem1_Title" Text="关于" FontSize="20" Foreground="Black" Padding="50,0,0,0" ></TextBlock>
                </PivotItem.Header>
                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                    <Image Source="Assets/app_logo_wide_1.png" Margin="0,20,0,0" Width="240" ></Image>
                    <TextBlock x:Name="AppVersion" Text="version 0.2" HorizontalAlignment="Center" Foreground="Black"></TextBlock>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0"
                                Background="#FFE05C52"
                                Tapped="Follow_Weibo_Tapped">
                        <Image Source="Assets/weibo.png" Margin="10"></Image>
                        <TextBlock Text="关注我们的新浪微博"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Margin="0,0,10,0"
                                   Foreground="White" ></TextBlock>
                    </StackPanel>

                </StackPanel>
    		</PivotItem>
    	</Pivot>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar x:Name="MainPageAppBar" ClosedDisplayMode="Compact" Opacity="0.5">
            <AppBarButton Label="您的反馈" Icon="Mail" Click="Send_Feedback_Click">
            </AppBarButton>
            <AppBarButton Label="我们的网站" Icon="Globe" Click="Launch_Web_Click">
            </AppBarButton>
            <AppBarButton Label="给应用打分" Icon="Accept">
            </AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
