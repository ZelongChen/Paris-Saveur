<Page
    x:Class="Paris_Saveur.RestaurantDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Paris_Saveur"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="#FFE05C52">
            <Image Source="Assets/logo_white.png"></Image>
            <TextBlock x:Name="PageTitle" Foreground="White" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"></TextBlock>
        </StackPanel>
        <Grid Grid.Row="1">
            <Image x:Name="restaurantThumbnail"
                   Stretch="Fill"></Image>
        </Grid>
        <TextBlock x:Name="restaurantDescription" 
                       HorizontalAlignment="Stretch" 
                       TextWrapping="Wrap"
                       Grid.Row="2" 
                       Foreground="Black"
                       Padding="10"></TextBlock>
        <StackPanel Orientation="Horizontal" Grid.Row="3">
            <Image Source="Assets/restaurant_detail_style.png" Margin="5"></Image>
            <TextBlock x:Name="restaurantStyle" 
                       Foreground="Black" 
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="4">
            <Image Source="Assets/restaurant_detail_price.png" Margin="5"></Image>
            <TextBlock x:Name="restaurantPrice" 
                       Foreground="Black" 
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="5">
            <Image Source="Assets/restaurant_detail_review.png" Margin="5"></Image>
            <Image x:Name="star1" Source="Assets/star_half.png" Margin="10"></Image>
            <Image x:Name="star2" Source="Assets/star_half.png" Margin="10"></Image>
            <Image x:Name="star3" Source="Assets/star_half.png" Margin="10"></Image>
            <Image x:Name="star4" Source="Assets/star_half.png" Margin="10"></Image>
            <Image x:Name="star5" Source="Assets/star_half.png" Margin="10"></Image>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="6">
            <Image Source="Assets/restaurant_detail_location.png" Margin="5"></Image>
            <TextBlock x:Name="restaurantAddress" 
                       Foreground="Black" 
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="7">
            <Image Source="Assets/restaurant_detail_metro.png" Margin="5"></Image>
            <TextBlock x:Name="restaurantMetro" 
                       Foreground="Black" 
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="8">
            <Image Source="Assets/restaurant_detail_clock.png" Margin="5"></Image>
            <TextBlock x:Name="restaurantTime" 
                       Foreground="Black" 
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"></TextBlock>
        </StackPanel>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar ClosedDisplayMode="Minimal" Opacity="0.5">

            <AppBarButton Label="呼叫" Icon="Phone">
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Name="restaurantPhoneNumber1"/>
                        <MenuFlyoutItem x:Name="restaurantPhoneNumber2"/>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarButton Label="分享" Icon="ReShare">
                <AppBarButton.Flyout>
                    <ListPickerFlyout x:Name="sharePage" ItemsSource="{Binding SocialNetworks}">
                    </ListPickerFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarButton Label="评论" Icon="Comment" Click="Comment_Click">
            </AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
